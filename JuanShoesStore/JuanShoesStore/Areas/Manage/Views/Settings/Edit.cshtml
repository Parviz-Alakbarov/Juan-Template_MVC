@model Setting
@{
    ViewData["Title"] = "Edit";

    bool hasImage = (Model.Key == "HeaderLogo" ||
                     Model.Key == "Banner1-Image" ||
                     Model.Key == "Banner2-Image" ||
                     Model.Key == "Service1-Image" ||
                     Model.Key == "Service2-Image" ||
                     Model.Key == "Service3-Image" ||
                     Model.Key == "BestSellerBannerImage"||
                     Model.Key=="ShopLeftBannerImage"
    );

}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Setting Form</div>
                        <hr>
                        <form method="post" asp-action="@(hasImage?"EditWhichHasImage":"EditWhichHasText")" enctype="multipart/form-data" class="d-flex flex-wrap">
                            <div class="form-group col-lg-12">
                                <label asp-for="Key">Key Name</label>
                                <input readonly asp-for="Key" class="form-control" placeholder="Key">
                                <span class="text-danger" asp-validation-for="Key"></span>
                            </div>
                            @if (hasImage)
                            {
                                <div class="form-group col-lg-12">
                                    <label asp-for="ImageFile">@Model.Key Image</label>
                                    <input asp-for="ImageFile" class="form-control" placeholder="Enter Image">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>

                                <div class="form-group col-lg-12">
                                    
                                    <input readonly asp-for="Value" class="form-control" placeholder="Value">
                                    <span class="text-danger" asp-validation-for="Value"></span>
                                </div>

                                <div class="col-lg-12 mb-3">

                                    <img width="150px" src="~/uploads/settings/@Model.Value" />
                                </div>
                            }
                            else
                            {
                                <div class="form-group col-lg-12">
                                    <label asp-for="Value">Brand Name</label>
                                    <input asp-for="Value" class="form-control" placeholder="Value">
                                    <span class="text-danger" asp-validation-for="Value"></span>
                                </div>
                            }

                            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group col-lg-6">
                                <button type="submit" class="btn btn-light px-5">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->
