@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Vertical Form</div>
                        <hr>
                        <form method="post" asp-action="edit" enctype="multipart/form-data" class="d-flex flex-wrap">
                            <div class="form-group col-lg-6">
                                <label asp-for="Subtitle">Subtitle</label>
                                <input asp-for="Subtitle" class="form-control" placeholder="Enter Subtitle">
                                <span class="text-danger" asp-validation-for="Subtitle"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Title">Title</label>
                                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                                <span class="text-danger" asp-validation-for="Title"></span>

                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="BtnText">Button Text</label>
                                <input asp-for="BtnText" class="form-control" placeholder="Enter Button Text">
                                <span class="text-danger" asp-validation-for="BtnText"></span>

                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="RedirectURL">RedirectURL</label>
                                <input asp-for="RedirectURL" class="form-control" placeholder="Enter RedirectURL">
                                <span class="text-danger" asp-validation-for="RedirectURL"></span>

                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Desc">Description</label>
                                <input asp-for="Desc" class="form-control" placeholder="Enter Description">
                                <span class="text-danger" asp-validation-for="Desc"></span>

                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="FormFile">Slider Image</label>
                                <input asp-for="FormFile" class="form-control" placeholder="Enter Image">
                                <span class="text-danger" asp-validation-for="FormFile"></span>
                            </div>
                            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                            @if (Model.Image != null)
                            {
                                <div class="col-lg-6"></div>
                                <div class="col-lg-6" style="position:relative;display:inline-block">
                                    <img style="width:200px" src="~/uploads/slider/@Model.Image">
                                </div>
                            }
                            <div class="form-group col-lg-6">
                                <button type="submit" class="btn btn-light px-5">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->

@section Scripts{
    <script>

        $(function(){
            $(document).on('click','.removeImage',function(){
                $(this).parent().remove();
            })
        })

    </script>
}