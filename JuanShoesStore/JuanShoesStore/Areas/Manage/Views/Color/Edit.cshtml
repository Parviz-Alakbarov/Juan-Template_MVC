@model Color
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Color Edit Form</div>
                        <hr>
                        <form method="post" asp-action="create" class="d-flex flex-wrap">
                            <div class="form-group col-lg-6">
                                <label asp-for="Name">Color Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Color Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="HexValue">Color HexValue</label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">@("#")</span>
                                    </div>
                                    <input asp-for="HexValue" class="form-control" maxlength="6" minlength="3" placeholder="Enter HexValue" aria-label="Username" aria-describedby="basic-addon1">
                                    <span class="text-danger" asp-validation-for="HexValue"></span>
                                </div>
                            </div>
                            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group col-lg-6">
                                <button type="submit" class="btn btn-light px-5">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->