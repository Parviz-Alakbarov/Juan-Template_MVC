@model Shoe
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Shoe Form</div>
                        <hr>

                        <form method="post" asp-action="create" enctype="multipart/form-data">
                            <div class="form-row mt-2">
                                <div class="form-group col-lg-6">
                                    <label asp-for="BrandId">Brand Name</label>
                                    <select class="form-control" asp-for="BrandId" asp-items="@new SelectList(ViewBag.Brands, nameof(Brand.Id), nameof(Brand.Name))">
                                    </select>
                                    <span class="text-danger" asp-validation-for="BrandId"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-row mt-2">

                                <div class="form-group col-lg-4">
                                    <label asp-for="SalePrice">Sale Price</label>
                                    <input asp-for="SalePrice" class="form-control" placeholder="Enter SalePrice">
                                    <span class="text-danger" asp-validation-for="SalePrice"></span>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="CostPrice">CostPrice</label>
                                    <input asp-for="CostPrice" class="form-control" placeholder="Enter CostPrice">
                                    <span class="text-danger" asp-validation-for="CostPrice"></span>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label asp-for="DiscountPercent">DiscountPercent</label>
                                    <input asp-for="DiscountPercent" class="form-control" placeholder="Enter DiscountPercent">
                                    <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                                </div>
                            </div>
                            <div class="form-row mt-2">

                                <div class="form-group col-lg-12">
                                    <label asp-for="Desc">Description</label>
                                    <textarea asp-for="Desc" class="form-control" placeholder="Enter Description"></textarea>
                                    <span class="text-danger" asp-validation-for="Desc"></span>
                                </div>

                            </div>
                            <div class="form-row mt-2">

                               <div class="form-group col-lg-6">
                                    <label asp-for="CategoryId">Category Name</label>
                                    <select class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name))">
                                    </select>
                                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                                </div>
                                <div class="form-group col-lg-2">
                                    <label asp-for="IsAvailable">IsAvailable</label>
                                    <input asp-for="IsAvailable" class="form-control" placeholder="Enter IsAvailable">
                                    <span class="text-danger" asp-validation-for="IsAvailable"></span>
                                </div>
                                <div class="form-group col-lg-2">
                                    <label asp-for="IsNew">IsNew</label>
                                    <input asp-for="IsNew" class="form-control" placeholder="Enter IsNew">
                                    <span class="text-danger" asp-validation-for="IsNew"></span>
                                </div>
                                <div class="form-group col-lg-2">
                                    <label asp-for="Rate">Rate</label>
                                    <input asp-for="Rate" class="form-control" placeholder="Enter Rate">
                                    <span class="text-danger" asp-validation-for="Rate"></span>
                                </div>

                            </div>

                            <div class="form-row mt-2">
                                <div class="form-group col-lg-6">
                                    <label asp-for="ImageFile">Image</label>
                                    <input asp-for="ImageFile" class="form-control">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label style="display:block" for="Color">Color</label>

                                    @*<select style=" background-color:black; color:white;" class="form-control" multiple id="Color" name="ColorIds[]" asp-items="@new SelectList(ViewBag.Colors, nameof(Color.Id), nameof(Color.Name))">
                                        </select>*@

                                    <select style=" background-color:black;" name="colorIds[]" size="3" class="form-control" multiple id="Color">

                                        @foreach (Color color in ViewBag.Colors)
                                        {
                                            <!option value="@color.Id" style="background-color:@color.HexValue; color:black; padding:5px 0;margin:2px 0;">@color.Name</!option>
                                        }

                                    </select>
                                </div>
                                <div class="form-group col-lg-3">
                                    <label style="display:block" asp-for="Gender">Gender</label>
                                    <select name="gender" style="padding:5px 15px; margin-top:5px; border-radius:5px;">
                                        <option style="background-color:black; color:white;" value="">UniSex</option>
                                        <option style="background-color:black; color:white;" value="true">Male</option>
                                        <option style="background-color:black; color:white;" value="false">Female</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                </div>
                            </div>
                            <div class="text-danger col-lg-12" asp-validation-summary=ModelOnly></div>
                            <div class="form-group col-lg-12">
                                <button type="submit" class="btn btn-light px-5">Create</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
        <div class="overlay toggle-menu"></div>
    </div>
</div>