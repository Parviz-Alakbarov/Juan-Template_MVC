@model Brand
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Vertical Form</div>
                        <hr>
                        <form method="post" asp-action="create" class="d-flex flex-wrap">
                            <div class="form-group col-lg-12">
                                <label asp-for="Name">Brand Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Brand Name">
                                <span class="text-danger" asp-validation-for="Name"></span>

                            </div>
                            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group col-lg-6">
                                <button type="submit" class="btn btn-light px-5">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
    <!-- End container-fluid-->

</div><!--End content-wrapper-->