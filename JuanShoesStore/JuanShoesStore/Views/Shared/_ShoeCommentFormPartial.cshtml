@model ShoeComment
    <div class="form-group row">
        <div class=" col-lg-12 text-danger" asp-validation-summary="ModelOnly">&nbsp;</div>
        <div class="col">
            <label class="col-form-label"><span class="text-danger">*</span> Rating</label>
            &nbsp;&nbsp;&nbsp; Bad&nbsp;
            <input type="radio" asp-for="Rate" form="form-comment"  value="1" >
            &nbsp;
            <input type="radio" asp-for="Rate" form="form-comment"  value="2" >
            &nbsp;
            <input type="radio" asp-for="Rate"  form="form-comment" value="3" >
            &nbsp;
            <input type="radio" asp-for="Rate"  form="form-comment" value="4" >
            &nbsp;
            <input type="radio" asp-for="Rate"  form="form-comment" value="5" >
            &nbsp;Good
        </div>
        <span class="text-danger" asp-validation-for="Rate"></span>
    </div>
<form asp-action="comment" asp-controller="shoe" id="form-comment" method="post" class="review-form">

    <div class="form-group row">
        <input type="hidden" value="@Model.ShoeId" name="shoeId" />
        <div class="col">
            <label class="col-form-label"><span class="text-danger">*</span> Your Review</label>
            <textarea asp-for="Text" class="form-control" required></textarea>
            <div class="help-block pt-10"><span class="text-danger">Note:</span> HTML is not translated!</div>
        </div>
    </div>
    <div class="buttons">
        <button class="sqr-btn btn btn-primary" type="submit">Post</button>
    </div>
</form> <!-- end of review-form -->